// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  name       String
  is_admin   Boolean  @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  servers    Server[]
  api_tokens ApiToken[]

  @@map("users")
}

model Location {
  id          Int      @id @default(autoincrement())
  name        String
  description String?  @db.Text
  country     String?
  city        String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  nodes    Node[]
  ip_pools IpPool[]

  @@map("locations")
}

model Node {
  id                Int      @id @default(autoincrement())
  name              String
  location_id       Int
  proxmox_host      String
  proxmox_port      Int      @default(8006)
  proxmox_user      String
  proxmox_password  String   // Consider encrypting this
  proxmox_realm     String   @default("pam")
  cpu_total         Int      @default(0)
  cpu_used          Int      @default(0)
  ram_total         BigInt   @default(0) // in MB
  ram_used          BigInt   @default(0) // in MB
  disk_total        BigInt   @default(0) // in GB
  disk_used         BigInt   @default(0) // in GB
  is_active         Boolean  @default(true)
  maintenance_mode  Boolean  @default(false)
  created_at        DateTime @default(now())
  updated_at        DateTime @updatedAt

  location Location @relation(fields: [location_id], references: [id], onDelete: Cascade)
  servers  Server[]

  @@map("nodes")
}

model Plan {
  id             Int      @id @default(autoincrement())
  name           String
  description    String?  @db.Text
  cpu_cores      Int
  ram_mb         Int
  disk_gb        Int
  bandwidth_gb   Int      @default(1000)
  price_per_hour Decimal  @default(0.00) @db.Decimal(10, 2)
  is_active      Boolean  @default(true)
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  servers Server[]

  @@map("plans")
}

model Server {
  id             Int      @id @default(autoincrement())
  user_id        Int
  node_id        Int
  plan_id        Int
  ip_address_id  Int?     @unique
  name           String
  proxmox_vmid   Int
  status         String   @default("installing") // installing, active, suspended, stopped
  cpu            Int
  ram            Int      // in MB
  disk           Int      // in GB
  os_template    String
  root_password  String   // Consider encrypting this
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  user       User        @relation(fields: [user_id], references: [id], onDelete: Cascade)
  node       Node        @relation(fields: [node_id], references: [id])
  plan       Plan        @relation(fields: [plan_id], references: [id])
  ip_address IpAddress?  @relation(fields: [ip_address_id], references: [id])

  @@map("servers")
}

model IpPool {
  id           Int      @id @default(autoincrement())
  name         String
  location_id  Int
  cidr         String
  gateway      String
  netmask      String
  dns_servers  String   @default("8.8.8.8,8.8.4.4")
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  location     Location    @relation(fields: [location_id], references: [id], onDelete: Cascade)
  ip_addresses IpAddress[]

  @@map("ip_pools")
}

model IpAddress {
  id          Int       @id @default(autoincrement())
  ip_pool_id  Int
  address     String    @unique
  is_assigned Boolean   @default(false)
  assigned_at DateTime?
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt

  ip_pool IpPool  @relation(fields: [ip_pool_id], references: [id], onDelete: Cascade)
  server  Server?

  @@map("ip_addresses")
}

model ApiToken {
  id           Int       @id @default(autoincrement())
  user_id      Int?
  name         String
  token        String    @unique
  permissions  String    @db.Text // JSON array: ["create_vm", "delete_vm", etc.]
  expires_at   DateTime?
  last_used_at DateTime?
  is_active    Boolean   @default(true)
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt

  user User? @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("api_tokens")
}
